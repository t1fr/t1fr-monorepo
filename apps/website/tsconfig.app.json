{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "moduleResolution": "Bundler",
        "types": [
            "unplugin-vue-router/client",
            "vite-plugin-vue-layouts/client",
            "vite/client",
            "unplugin-icons/types/vue3"
        ],
    },
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.vue",
        "src/**/*.test.vue"
    ],
    "include": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.vue",
        "dts/**/*.d.ts"
    ]
}