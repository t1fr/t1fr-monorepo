{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultBase": "main",
    "workspaceLayout": {
        "appsDir": "apps",
        "libsDir": "libs"
    },
    "parallel": 5,
    "namedInputs": {
        "default": [
            "{projectRoot}/**/*",
            "sharedGlobals"
        ],
        "production": [
            "default",
            "!{projectRoot}/.eslintrc.json",
            "!{projectRoot}/eslint.config.js",
            "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
            "!{projectRoot}/tsconfig.spec.json",
            "!{projectRoot}/jest.config.[jt]s",
            "!{projectRoot}/src/test-setup.[jt]s",
            "!{projectRoot}/test-setup.[jt]s"
        ],
        "sharedGlobals": [
            "{workspaceRoot}/.github/**/*.yml"
        ]
    },
    "plugins": [
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/jest/plugin",
            "options": {
                "targetName": "test"
            }
        },
        {
            "plugin": "@nx/vite/plugin",
            "options": {
                "buildTargetName": "build",
                "previewTargetName": "preview",
                "testTargetName": "test",
                "serveTargetName": "serve",
                "serveStaticTargetName": "serve-static"
            }
        }
    ],
    "targetDefaults": {
        "build": {
            "executor": "@nx/vite:build",
            "outputs": [
                "{options.outputPath}"
            ],
            "inputs": [
                "production",
                "^production"
            ],
            "options": {
                "outputPath": "dist/{projectRoot}",
                "generatePackageJson": true
            },
            "cache": true
        },
        "serve": {
            "executor": "@nx/vite:dev-server",
            "options": {
                "buildTarget": "{projectName}:build"
            }
        },
        "container": {
            "executor": "@nx-tools/nx-container:build",
            "options": {
                "engine": "docker",
                "load": true,
                "push": true,
                "metadata": {
                    "images": [
                        "ghcr.io/t1fr/{projectName}"
                    ],
                    "tags": [
                        "type=ref,event=branch",
                        "type=ref,event=tag",
                        "type=ref,event=pr",
                        "type=sha,prefix=sha-",
                        "type=raw,value=latest,enable={{is_default_branch}}"
                    ]
                }
            }
        },
        "backend-deploy": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "echo \"docker rm -f {projectName} || true\" >> scripts.txt",
                    "node decomposerize.js {projectRoot}/docker-compose.yml >> scripts.txt"
                ]
            }
        },
        "frontend-deploy": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "rsync -azvhn --delete-after \"ssh -o StrictHostKeyChecking=no\" dist/{projectRoot}/ \"T1FR Server\"@220.135.86.181:./Documents/services/nginx/sites/$SUBROUTE/"
                ]
            }
        }
    }
}