{
  "name": "squadron-manage-backend",
  "version": "0.0.1",
  "description": "聯隊管理伺服器 Nest + DiscordJS",
  "author": "HI_OuO",
  "private": true,
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "cross-env NODE_ENV=test nest start",
    "start:dev": "cross-env NODE_ENV=test nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.5",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.5",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.4",
    "@nestjs/platform-express": "^10.3.5",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/swagger": "^7.3.0",
    "ascii-table3": "^0.9.0",
    "axios": "^1.6.8",
    "cheerio": "^1.0.0-rc.12",
    "cookie-parser": "^1.4.6",
    "dayjs": "^1.11.10",
    "discord.js": "^14.14.1",
    "express": "^4.19.1",
    "flatten-anything": "^3.0.5",
    "joi": "^17.12.2",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "mongodb": "6.3.0",
    "mongoose": "^8.2.3",
    "necord": "^6.8.1",
    "reflect-metadata": "^0.2.1",
    "romanumber": "^1.1.1",
    "rxjs": "^7.8.1",
    "types-ddd": "^3.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.5",
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.8",
    "@types/cheerio": "^0.22.35",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.5",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.0",
    "@types/node": "20.7.1",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": [
        "<rootDir>/$1"
      ],
      "^@app/battle-schedule(|/.*)$": "<rootDir>/libs/battle-schedule/src/$1",
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    },
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ]
  }
}